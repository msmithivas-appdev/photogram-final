<%# add photo form is shown when user is signed in %>
<%# when user is not signed in, only show public photos %>

<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<hr>

<div>
    <% if session.fetch(:user_id) != nil  %>
  <div>
    <h2>
      Add a new photo
    </h2>

    
    <form action="/insert_photo" method="post" enctype="multipart/form-data">
      <label for="browser_input">Image</label>
      <input id="browser_input" type="file" name="query_image" placeholder="Enter a URL for the image...">

      <label for="browser_caption">Caption</label>
      <textarea id="browser_caption" name="query_caption" placeholder="Enter a caption for the photo..."></textarea>

      <button>Add photo</button>
    </form>

  </div>
  <% end %>

</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_photos.each do |a_photo| %>
      <% if a_photo.owner.private == false %>
      <tr>
        <td>
          <%= a_photo.image %>
        </td>

        <td>
          <%= a_photo.caption %>
        </td>

        <td>
          <%= a_photo.owner_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_photo.created_at) %>
        </td>

         <td>
          <%= a_photo.likes_count %>
        </td>

        <td>
          <a href="/photos/<%= a_photo.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
      <% end %>
    </table>
  </div>
</div>

<hr>
