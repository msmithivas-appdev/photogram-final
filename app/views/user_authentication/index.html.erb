<h1> List of users</h1>

<table border="1">
  <tr>
    <th>
      Username
    </th>

    <th>
      Private?
    </th>

    <th></th>
    <th></th>
  </tr>

  <% @list_of_all_users.each do |a_user| %>
   <tr>
      <td>
        <%= a_user.username %>
      </td>

      <td>
        <% user_privacy = a_user.private ? "Yes" : "No" %>
        <%= user_privacy %>
      </td>

      <td>
      <a href="/users/<%= a_user.username %>">Show details</a>
      </td>


    </tr>
  <% end %>
  
  </table>
