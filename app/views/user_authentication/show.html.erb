<h1><%= @the_user.username %></h1>

<dl>
  <dt>Private</dt>
  <dd><%= @the_user.private %></dd>

  <dt>Followers</dt>

  <dd>
    <%= @the_user.followers.count %>
  </dd>
</dl>

<% a_request = FollowRequest.where({ :sender_id => @current_user.id }).where({ :recipient_id => @the_user.id}).at(0) %>
                  <% if a_request == nil %>

                  <td>
                    <form action="/insert_follow_request" method="post">
                    <input type="hidden" name="query_recipient_id" value="<%= @the_user.id %>">
                    <button>
                      Follow
                    </button>
                    </form>
                  </td>

                  <% elsif a_request.status == "accepted" %>

                  <td>
                  <a href="/delete_follow_request/<%= a_request.id %>">Unfollow</a>
                  </td>

                  <% elsif a_request.status == "pending" %>
                  <td>
                  Request sent. <a href="/delete_follow_request/<%= a_request.id %>">Cancel</a>
                  </td>

                  <% else %>
                  <td> </td>
                  <% end %>


<% if session.fetch(:user_id) == @the_user.id %>
 <h4>Pending follow requests</h4>


    <ul>
          <% pending_requests = FollowRequest.where({ :recipient_id => @the_user.id }).where({ :status => "pending" }) %>
             <% pending_requests.each do |a_request| %>
          <li>
            <%= a_request.sender.username %>

            <form action="/modify_follow_request/<%= a_request.sender.id %>" method="post">
              <input name="query_status" value="accepted" type="hidden">

              <button>
                Accept
              </button>
            </form>

            <form action="/modify_follow_request/<%= a_request.sender.id %>" method="post">
              <input name="query_status" value="rejected" type="hidden">
            
              <button>
                Reject
              </button>
            </form>
          </li>
        <% end %>

    </ul>
    <% end %> 


  

  <dl>
  <dt>Following</dt>
  <dd><%= @the_user.following.count %></dd>

  <% if session.fetch(:user_id) == @the_user.id %>

  <dt>Edit user</dt>
  <dd>
    <form action="/modify_user/<%= @the_user.id %>" method="post">
      <label for="browser_username">Username</label>
      <input id="browser_username" type="text" name="query_username" value="<%= @the_user.username%>">

      <label for="browser_private">Private?</label>
      <input id="browser_private" type="checkbox" name="query_private"  checked>

      <button>Update user</button>
    </form>
  </dd>

  </dl>
  <% end %>

<nav>
  <ul>
    <li>
      <a href="/users/<%= @the_user.username %>">Profile</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%= @the_user.username %>/discover">Discover</a>
    </li>
  </ul>
</nav>


<h2>Own photos (<%= @the_user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>


<% @the_user.own_photos.each do |a_photo| %>
  <tr>
    <td>
      <img src="<%= a_photo.image %>">
    </td>

    <td>
      <%= @the_user.username %>
    </td>

    <td>
      <%= a_photo.caption %>
    </td>

    <td>
      <%= time_ago_in_words(a_photo.created_at) + " ago" %>
    </td>

    <td>
      <%= a_photo.likes_count.to_s %>
    </td>

    <td>
      <a href="/photos/<%= a_photo.id %>">
        Show details
      </a>
    </td>

   </tr>
   <% end %>

  </table>
